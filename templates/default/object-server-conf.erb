[DEFAULT]
devices = /srv/<%= @server_num %>/node
mount_check = false
disable_fallocate = true
bind_port = 60<%= @server_num %>0
user = <%= node[:cloudfiles][:user] %>
log_facility = LOG_LOCAL<%= @server_num %>
recon_cache_path = /var/cache/swift<%= @server_num %>

[pipeline:main]
pipeline = recon object-server

[app:object-server]
use = egg:swift#object

[filter:recon]
use = egg:swift#recon

[object-replicator]
vm_test_mode = yes

[object-updater]

[object-auditor]
