[DEFAULT]
devices = /srv/<%= @server_num %>/node
mount_check = false
disable_fallocate = true
bind_port = 60<%= @server_num %>2
user = <%= node[:cloudfiles][:user] %>
log_facility = LOG_LOCAL<%= @server_num %>
recon_cache_path = /var/cache/swift<%= @server_num %>

[pipeline:main]
pipeline = recon account-server

[app:account-server]
use = egg:swift#account

[filter:recon]
use = egg:swift#recon

[account-replicator]
vm_test_mode = yes

[account-auditor]

[account-reaper]
